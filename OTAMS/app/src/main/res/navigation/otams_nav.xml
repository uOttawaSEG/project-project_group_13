<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otams_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.otams.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_fragment_signup"
            app:destination="@id/fragment_signup" />
        <action
            android:id="@+id/action_loginFragment_to_fragment_homepage"
            app:destination="@id/fragment_homepage" />
    </fragment>
    <fragment
        android:id="@+id/fragment_signup"
        android:name="com.example.otams.ui.login.fragment_signup"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_fragment_signup_to_loginFragment"
            app:destination="@id/loginFragment" />
        <argument android:name="username" />
        <argument android:name="password" />
    </fragment>
    <fragment
        android:id="@+id/fragment_homepage"
        android:name="com.example.otams.ui.login.fragment_homepage"
        android:label="fragment_homepage"
        tools:layout="@layout/fragment_homepage" >
        <action
            android:id="@+id/action_fragment_homepage_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>