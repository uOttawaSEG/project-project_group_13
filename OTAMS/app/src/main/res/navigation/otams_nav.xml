<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otams_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.otams.ui.fragment_login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_fragment_signup"
            app:destination="@id/fragment_signup" />
        <action
            android:id="@+id/action_loginFragment_to_fragment_homepage"
            app:destination="@id/fragment_homepage" />
    </fragment>
    <fragment
        android:id="@+id/fragment_signup"
        android:name="com.example.otams.ui.fragment_signup"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_fragment_signup_to_loginFragment"
            app:destination="@id/loginFragment" />
        <argument android:name="username"
            app:argType="string" />
        <argument android:name="password"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fragment_homepage"
        android:name="com.example.otams.ui.fragment_homepage"
        android:label="fragment_homepage"
        tools:layout="@layout/fragment_homepage" >
        <action
            android:id="@+id/action_fragment_homepage_to_loginFragment"
            app:destination="@id/loginFragment" />
        <argument
            android:name="username"
            app:argType="string" />
        <action
            android:id="@+id/action_fragment_homepage_to_adminFragment"
            app:destination="@id/fragment_admin" />
        <action
            android:id="@+id/action_fragment_homepage_to_fragment_tutor"
            app:destination="@id/fragment_tutor" />
        <action
            android:id="@+id/action_fragment_homepage_to_fragment_student"
            app:destination="@id/fragment_student" />
    </fragment>
    <fragment
        android:id="@+id/fragment_admin"
        android:name="com.example.otams.ui.fragment_admin"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin" >
        <action
            android:id="@+id/action_adminFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_tutor"
        android:name="com.example.otams.ui.fragment_tutor"
        android:label="fragment_tutor_list"
        tools:layout="@layout/fragment_tutor_student0list" >
        <action
            android:id="@+id/action_fragment_tutor_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_student"
        android:name="com.example.otams.ui.fragment_student"
        android:label="fragment_student"
        tools:layout="@layout/fragment_student" >
        <action
            android:id="@+id/action_fragment_student_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>