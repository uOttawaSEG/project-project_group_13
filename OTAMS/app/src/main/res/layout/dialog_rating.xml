<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Rate Your Tutor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tutor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Tutor Name"
        android:textSize="16sp" />

    <!-- Rating Numbers -->
    <LinearLayout
        android:id="@+id/rating_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rating_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="onRatingClick"

            android:text="1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/rating_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"

            android:onClick="onRatingClick"
            android:text="2"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/rating_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"

            android:onClick="onRatingClick"
            android:text="3"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/rating_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"

            android:onClick="onRatingClick"
            android:text="4"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/rating_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"

            android:onClick="onRatingClick"
            android:text="5"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Rating Description -->
    <TextView
        android:id="@+id/rating_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Select a rating from 1 (Poor) to 5 (Excellent)"
        android:textSize="14sp" />

    <!-- Selected Rating Display -->
    <TextView
        android:id="@+id/selected_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Selected: None"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Submit Rating" />

    </LinearLayout>

</LinearLayout>