<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Course Code -->
        <TextView
            android:id="@+id/course_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MATH101"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Tutor Info -->
        <TextView
            android:id="@+id/tutor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutor: Loading..."
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tutor_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating: Loading..."
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/session_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nov 30, 2023"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/session_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:00 - 15:00"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/session_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Library Room 101"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Auto-approve Indicator -->
        <TextView
            android:id="@+id/auto_approve_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-approve"
            android:textSize="12sp"
            android:background="#E8F5E8"

            android:textColor="#2E7D32"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Request Button -->
        <Button
            android:id="@+id/request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Session"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</androidx.cardview.widget.CardView>